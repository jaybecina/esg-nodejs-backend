{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": ["build", "node_modules", "sample", "**/*.spec.ts", "test/**", "templates"],
  "lib": ["es2015"]
}